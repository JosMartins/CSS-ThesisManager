<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="pt.ul.fc.css.javafxclient.presentation.control.SubmissionController">
    <children>
        <GridPane hgap="10" vgap="10">
            <!-- Removed <columnConstraints> section -->
            <Label text="Submissão do documento de proposta de tese:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="proposalDocumentField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Submissão do documento final de tese:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="finalDocumentField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Button text="Submit" onAction="#handleSubmitButtonAction" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </GridPane>
    </children>
</VBox>
